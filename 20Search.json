// source filter

GET recipe/_search
{
  "_source": false, 
  "query": {
    "match": {
      "title": "pasta"
    }
  }
}

// source filter show some properties
GET recipe/_search
{
  "_source": ["steps","title"], 
  "query": {
    "match": {
      "title": "pasta"
    }
  }
}

GET recipe/_search
{
  "_source": {
    "includes": "ingredients.*",
    "excludes": "ingredients.name"
  }, 
  "query": {
    "match": {
      "title": "pasta"
    }
  }
}

// size
GET recipe/_search
{
  "size": 2, 
  "_source": false,
  "query": {
    "match": {
      "title": "pasta"
    }
  }
}
//offset -> from is record element at
GET recipe/_search
{
  "size": 2, 
  "from": 1, 
  "_source": false,
  "query": {
    "match": {
      "title": "pasta"
    }
  }
}

// Pagings
// total_pages = ceil(total_hits/page_size)
// from = (page_size * (page_number -1))

// sorting
GET recipe/_search
{
  "_source": ["preparation_time_minutes","created"], 
  "query": {
    "match": {
      "title": "pasta"
    }
  },
  "sort": [
    {
      "preparation_time_minutes": "asc",
      "created": "desc"
    }
  ]
}